<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống quản lý LDA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLTTTA_WEB.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap"></i> Hệ thống quản lý LDA
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="studentDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-graduate"></i> Quản lý học viên
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="studentDropdown">
                                    <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">
                                            <i class="fas fa-list"></i> Danh sách học viên
                                        </a></li>
                                    <li><a class="dropdown-item" asp-controller="Students" asp-action="Create">
                                            <i class="fas fa-plus"></i> Thêm học viên
                                        </a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="courseDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-book"></i> Quản lý khóa học
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="courseDropdown">
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-list"></i> Danh sách khóa học
                                        </a></li>
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-plus"></i> Thêm khóa học
                                        </a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="classDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-chalkboard-teacher"></i> Quản lý lớp học
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="classDropdown">
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-list"></i> Danh sách lớp học
                                        </a></li>
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-plus"></i> Thêm lớp học
                                        </a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="registrationDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-clipboard-list"></i> Đăng ký học
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="registrationDropdown">
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-list"></i> Danh sách đăng ký
                                        </a></li>
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-plus"></i> Đăng ký mới
                                        </a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="paymentDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-credit-card"></i> Thanh toán
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="paymentDropdown">
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-list"></i> Danh sách hóa đơn
                                        </a></li>
                                    <li><a class="dropdown-item" href="#">
                                            <i class="fas fa-money-bill-wave"></i> Lịch sử thanh toán
                                        </a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> Xin chào, @Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <h6 class="dropdown-header">@Context.Session.GetString("Role")</h6>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post"
                                            style="display: inline;">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Trung tâm tiếng Anh LDA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách
                bảo mật</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>