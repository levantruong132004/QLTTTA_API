@model QLTTTA_WEB.Models.VerifyOtpViewModel
@{
    ViewData["Title"] = "Xác thực OTP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung tâm Tiếng Anh LDA</title>

    <link rel="stylesheet" href="~/css/retro-vintage.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body { display:flex; align-items:center; justify-content:center; min-height:100vh; padding:20px; }
        .verify-container { max-width: 500px; width: 100%; }
        .verify-header { text-align:center; margin-bottom:2rem; }
        .verify-header h1 { font-size: 3rem; color: var(--vintage-brown); text-shadow: var(--text-shadow-vintage); margin-bottom: .5rem; }
        .verify-header .subtitle { font-family: 'Times New Roman','Georgia',serif!important; font-size:1.1rem; color: var(--vintage-rust); font-style:italic; }
        .text-validation-error { color: var(--vintage-burgundy); font-size:.85rem; margin-top:5px; font-style:italic; }
        .actions { display:flex; justify-content:space-between; align-items:center; gap: .5rem; }
        .links { text-align:center; margin-top:1rem; }
        .links a { color: var(--vintage-rust); text-decoration:none; font-weight:600; }
        .links a:hover { color: var(--vintage-brown); text-decoration:underline; }
    </style>
</head>
<body>
    <div class="verify-container">
        <div class="verify-header">
            <i class="fas fa-shield-alt" style="font-size: 3rem; color: var(--vintage-rust);"></i>
            <h1>XÁC THỰC OTP</h1>
            <p class="subtitle">~ Trung tâm Tiếng Anh LDA ~</p>
        </div>

        <div class="retro-form corner-decorated">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="retro-alert retro-alert-danger"><div class="retro-alert-content">@Html.ValidationSummary(false)</div></div>
            }
            @if (!string.IsNullOrEmpty(Model.InfoMessage))
            {
                <div class="retro-alert retro-alert-info"><div class="retro-alert-content">@Model.InfoMessage</div></div>
            }

            <form asp-action="VerifyOtp" method="post" id="verifyOtpForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Username" />

                <div class="form-group-retro">
                    <label asp-for="Otp" class="form-label-retro"><i class="fas fa-key"></i> Mã OTP</label>
                    <input asp-for="Otp" class="form-control-retro" placeholder="Nhập mã OTP 4-6 ký tự" autocomplete="one-time-code" />
                    <span asp-validation-for="Otp" class="text-validation-error"></span>
                    <div class="text-muted" style="font-size:.9rem; margin-top:6px;">
                        Mã OTP được gửi đến email của tài khoản <strong>@Model.Username</strong>. Hiệu lực 10 phút.
                    </div>
                </div>

                <div class="actions" style="margin-top:1rem;">
                    <button type="submit" class="btn-retro btn-retro-primary" style="flex:1;">
                        <i class="fas fa-check"></i> XÁC THỰC
                    </button>
                    <button type="submit" class="btn-retro btn-retro-secondary" style="flex:1;"
                            formaction="@Url.Action("ResendOtp", "Account")" formmethod="post">
                        <i class="fas fa-paper-plane"></i> GỬI LẠI OTP
                    </button>
                    <input type="hidden" name="username" value="@Model.Username" />
                </div>
            </form>

            <div class="links">
                <a asp-action="Register"><i class="fas fa-user-plus"></i> Đăng ký tài khoản</a> •
                <a asp-action="Login"><i class="fas fa-sign-in-alt"></i> Về trang đăng nhập</a>
            </div>
        </div>

        <div class="login-footer" style="text-align:center; margin-top: 2rem; padding: 1rem; font-size: .9rem; color: var(--vintage-gray);">
            <div class="vintage-divider"></div>
            <p>&copy; 2025 Trung tâm Tiếng Anh LDA. Bảo lưu mọi quyền.</p>
        </div>
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</body>
</html>
