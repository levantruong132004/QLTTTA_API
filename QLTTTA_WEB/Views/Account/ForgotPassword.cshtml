@model QLTTTA_WEB.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung tâm Tiếng Anh LDA</title>

    <link rel="stylesheet" href="~/css/retro-vintage.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body { display: flex; align-items: center; justify-content: center; min-height: 100vh; padding: 20px; }
        .fp-container { max-width: 500px; width: 100%; }
        .fp-header { text-align: center; margin-bottom: 2rem; }
        .fp-header h1 { font-size: 2.5rem; color: var(--vintage-brown); text-shadow: var(--text-shadow-vintage); margin-bottom: 0.5rem; }
        .fp-header .subtitle { font-family: 'Times New Roman','Georgia',serif!important; font-size: 1.1rem; color: var(--vintage-rust); font-style: italic; }
        .text-validation-error { color: var(--vintage-burgundy); font-size: .85rem; margin-top: 5px; font-style: italic; }
        .back-link { margin-top: 1.25rem; text-align: center; }
        .back-link a { color: var(--vintage-rust); text-decoration: none; font-weight: 600; }
        .back-link a:hover { color: var(--vintage-brown); text-decoration: underline; }
    </style>
</head>

<body>
    <div class="fp-container">
        <div class="fp-header">
            <i class="fas fa-key" style="font-size: 3rem; color: var(--vintage-rust);"></i>
            <h1>QUÊN MẬT KHẨU</h1>
            <p class="subtitle">~ Trung tâm Tiếng Anh LDA ~</p>
        </div>

        <div class="retro-form corner-decorated">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="retro-alert retro-alert-danger"><div class="retro-alert-content">@Html.ValidationSummary(false)</div></div>
            }
            @if (ViewBag.InfoMessage != null)
            {
                <div class="retro-alert retro-alert-info"><div class="retro-alert-content">@ViewBag.InfoMessage</div></div>
            }

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group-retro">
                    <label asp-for="Username" class="form-label-retro"><i class="fas fa-user"></i> Tên tài khoản</label>
                    <input asp-for="Username" class="form-control-retro" placeholder="Nhập tên tài khoản" autocomplete="username" />
                    <span asp-validation-for="Username" class="text-validation-error"></span>
                </div>

                <div class="form-group-retro">
                    <label asp-for="Email" class="form-label-retro"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control-retro" type="email" placeholder="Nhập email đăng ký" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-validation-error"></span>
                </div>

                <button type="submit" class="btn-retro btn-retro-primary" style="width:100%; margin-top: 1rem;">
                    <i class="fas fa-paper-plane"></i> GỬI YÊU CẦU XÁC THỰC TÀI KHOẢN
                </button>
            </form>

            <div class="back-link">
                <a asp-action="Login"><i class="fas fa-arrow-left"></i> Quay lại đăng nhập</a>
            </div>
        </div>

        <div class="login-footer" style="text-align:center; margin-top: 2rem; padding: 1rem; font-size: .9rem; color: var(--vintage-gray);">
            <div class="vintage-divider"></div>
            <p>&copy; 2025 Trung tâm Tiếng Anh LDA. Bảo lưu mọi quyền.</p>
        </div>
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</body>

</html>