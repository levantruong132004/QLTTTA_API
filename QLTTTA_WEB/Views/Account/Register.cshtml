@model QLTTTA_WEB.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung tâm Tiếng Anh LDA</title>

    <!-- Retro Vintage CSS -->
    <link rel="stylesheet" href="~/css/retro-vintage.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .register-container {
            max-width: 600px;
            width: 100%;
        }

        .register-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .register-header h1 {
            font-size: 3rem;
            color: var(--vintage-brown);
            text-shadow: var(--text-shadow-vintage);
            margin-bottom: 0.5rem;
        }

        .register-header .subtitle {
            font-family: 'Times New Roman', 'Georgia', serif !important;
            font-size: 1.1rem;
            color: var(--vintage-rust);
            font-style: italic;
            letter-spacing: 0px !important;
            text-transform: none !important;
        }

        .register-form {
            margin-bottom: 0;
        }

        .form-row {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .form-row .form-group-retro {
            flex: 1;
            margin-bottom: 0;
        }

        .text-validation-error {
            color: var(--vintage-burgundy);
            font-size: 0.85rem;
            margin-top: 5px;
            font-style: italic;
        }

        .register-footer {
            text-align: center;
            margin-top: 2rem;
            padding: 1rem;
            font-size: 0.9rem;
            color: var(--vintage-gray);
        }

        .login-link {
            margin-top: 1.5rem;
            text-align: center;
            padding: 1rem;
            background: rgba(139, 69, 19, 0.05);
            border-radius: 8px;
            border: 1px solid rgba(139, 69, 19, 0.2);
        }

        .login-link a {
            color: var(--vintage-rust);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .login-link a:hover {
            color: var(--vintage-brown);
            text-decoration: underline;
        }

        /* Placeholder font style */
        .form-control-retro::placeholder {
            font-family: 'Times New Roman', 'Georgia', serif !important;
            font-style: italic;
            color: #999;
        }

        /* Required field asterisk */
        .required::after {
            content: " *";
            color: #dc3545;
            font-weight: bold;
        }

        .form-label-retro.required {
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        /* Gender radio buttons */
        .gender-options {
            display: flex;
            gap: 2rem;
            margin-top: 0.5rem;
        }

        .gender-option {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .gender-option input[type="radio"] {
            margin: 0;
        }

        /* Three column layout for some fields */
        .form-row-three {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .form-row-three .form-group-retro {
            margin-bottom: 0;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .form-row, .form-row-three {
                grid-template-columns: 1fr;
                flex-direction: column;
                gap: 0;
            }

            .form-row .form-group-retro, .form-row-three .form-group-retro {
                margin-bottom: 1rem;
            }

            .gender-options {
                flex-direction: column;
                gap: 1rem;
            }
        }
    </style>
</head>

<body>
    <div class="register-container">
        <div class="register-header">
            <i class="fas fa-user-plus" style="font-size: 3rem; color: var(--vintage-rust);"></i>
            <h1>ĐĂNG KÝ TÀI KHOẢN</h1>
            <p class="subtitle">~ Trung tâm Tiếng Anh LDA ~</p>
        </div>

        <div class="retro-form corner-decorated">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="retro-alert retro-alert-danger">
                    <div class="retro-alert-content">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="retro-alert retro-alert-success">
                    <div class="retro-alert-content">
                        @TempData["SuccessMessage"]
                    </div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="retro-alert retro-alert-danger">
                    <div class="retro-alert-content">
                        @TempData["ErrorMessage"]
                    </div>
                </div>
            }

            <form asp-action="Register" method="post" id="registerForm" class="register-form">
                @Html.AntiForgeryToken()

                <!-- Họ tên -->
                <div class="form-group-retro">
                    <label asp-for="FullName" class="form-label-retro required">
                        <i class="fas fa-user"></i> Họ và tên
                    </label>
                    <input asp-for="FullName" class="form-control-retro" placeholder="Nhập họ và tên đầy đủ"
                        autocomplete="name" />
                    <span asp-validation-for="FullName" class="text-validation-error"></span>
                </div>

                <!-- Giới tính, ngày sinh, số điện thoại -->
                <div class="form-row-three">
                    <div class="form-group-retro">
                        <label asp-for="Sex" class="form-label-retro required">
                            <i class="fas fa-venus-mars"></i> Giới tính
                        </label>
                        <div class="gender-options">
                            <div class="gender-option">
                                <input type="radio" asp-for="Sex" value="Nam" id="male" />
                                <label for="male">Nam</label>
                            </div>
                            <div class="gender-option">
                                <input type="radio" asp-for="Sex" value="Nữ" id="female" />
                                <label for="female">Nữ</label>
                            </div>
                        </div>
                        <span asp-validation-for="Sex" class="text-validation-error"></span>
                    </div>

                    <div class="form-group-retro">
                        <label asp-for="DateOfBirth" class="form-label-retro required">
                            <i class="fas fa-calendar-alt"></i> Ngày sinh
                        </label>
                        <input asp-for="DateOfBirth" class="form-control-retro" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-validation-error"></span>
                    </div>

                    <div class="form-group-retro">
                        <label asp-for="PhoneNumber" class="form-label-retro required">
                            <i class="fas fa-phone"></i> Số điện thoại
                        </label>
                        <input asp-for="PhoneNumber" class="form-control-retro" type="tel" placeholder="Nhập số điện thoại"
                            autocomplete="tel" />
                        <span asp-validation-for="PhoneNumber" class="text-validation-error"></span>
                    </div>
                </div>

                <!-- Email và Địa chỉ -->
                <div class="form-row">
                    <div class="form-group-retro">
                        <label asp-for="Email" class="form-label-retro required">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control-retro" type="email" placeholder="Nhập địa chỉ email"
                            autocomplete="email" />
                        <span asp-validation-for="Email" class="text-validation-error"></span>
                    </div>

                    <div class="form-group-retro">
                        <label asp-for="Address" class="form-label-retro">
                            <i class="fas fa-map-marker-alt"></i> Địa chỉ
                        </label>
                        <input asp-for="Address" class="form-control-retro" placeholder="Nhập địa chỉ (tùy chọn)"
                            autocomplete="address" />
                        <span asp-validation-for="Address" class="text-validation-error"></span>
                    </div>
                </div>

                <!-- Tên tài khoản -->
                <div class="form-group-retro">
                    <label asp-for="Username" class="form-label-retro required">
                        <i class="fas fa-user-circle"></i> Tên tài khoản
                    </label>
                    <input asp-for="Username" class="form-control-retro" placeholder="Nhập tên tài khoản (3-50 ký tự)"
                        autocomplete="username" />
                    <span asp-validation-for="Username" class="text-validation-error"></span>
                </div>

                <!-- Mật khẩu và xác nhận mật khẩu -->
                <div class="form-row">
                    <div class="form-group-retro">
                        <label asp-for="Password" class="form-label-retro required">
                            <i class="fas fa-lock"></i> Mật khẩu
                        </label>
                        <input asp-for="Password" class="form-control-retro" type="password" placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)"
                            autocomplete="new-password" />
                        <span asp-validation-for="Password" class="text-validation-error"></span>
                    </div>

                    <div class="form-group-retro">
                        <label asp-for="ConfirmPassword" class="form-label-retro required">
                            <i class="fas fa-lock"></i> Xác nhận mật khẩu
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control-retro" type="password" placeholder="Nhập lại mật khẩu"
                            autocomplete="new-password" />
                        <span asp-validation-for="ConfirmPassword" class="text-validation-error"></span>
                    </div>
                </div>

                <button type="submit" class="btn-retro btn-retro-primary" style="width: 100%; margin-top: 1.5rem;" id="registerBtn">
                    <i class="fas fa-user-plus"></i> ĐĂNG KÝ TÀI KHOẢN
                </button>
            </form>

            <div class="login-link">
                <p><i class="fas fa-info-circle"></i> Đã có tài khoản? 
                    <a asp-action="Login"><i class="fas fa-sign-in-alt"></i> Đăng nhập ngay</a>
                </p>
            </div>
        </div>

        <div class="register-footer">
            <div class="vintage-divider"></div>
            <p>&copy; 2025 Trung tâm Tiếng Anh LDA. Bảo lưu mọi quyền.</p>
        </div>
    </div>

    <script>
        // Tự động focus vào họ tên khi trang load
        window.addEventListener('load', function () {
            document.getElementById('FullName')?.focus();
        });

        // Kiểm tra mật khẩu khớp và validation khác
        document.addEventListener('DOMContentLoaded', function() {
            const password = document.getElementById('Password');
            const confirmPassword = document.getElementById('ConfirmPassword');
            const form = document.getElementById('registerForm');
            
            function checkPasswordMatch() {
                if (password.value && confirmPassword.value) {
                    if (password.value !== confirmPassword.value) {
                        confirmPassword.setCustomValidity('Mật khẩu xác nhận không khớp');
                    } else {
                        confirmPassword.setCustomValidity('');
                    }
                }
            }
            
            password?.addEventListener('input', checkPasswordMatch);
            confirmPassword?.addEventListener('input', checkPasswordMatch);

            // Validation khi submit form
            form?.addEventListener('submit', function(e) {
                // Kiểm tra giới tính được chọn
                const genderInputs = document.querySelectorAll('input[name="Sex"]');
                const isGenderSelected = Array.from(genderInputs).some(input => input.checked);
                
                if (!isGenderSelected) {
                    e.preventDefault();
                    alert('Vui lòng chọn giới tính');
                    return false;
                }

                // Kiểm tra ngày sinh
                const dateOfBirth = document.getElementById('DateOfBirth');
                if (dateOfBirth && !dateOfBirth.value) {
                    e.preventDefault();
                    alert('Vui lòng chọn ngày sinh');
                    return false;
                }

                // Kiểm tra ngày sinh hợp lệ (không quá nhỏ hoặc quá lớn)
                if (dateOfBirth && dateOfBirth.value) {
                    const birthDate = new Date(dateOfBirth.value);
                    const today = new Date();
                    const age = today.getFullYear() - birthDate.getFullYear();
                    
                    if (age < 10 || age > 100) {
                        e.preventDefault();
                        alert('Tuổi phải từ 10 tuổi');
                        return false;
                    }
                }
            });
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>