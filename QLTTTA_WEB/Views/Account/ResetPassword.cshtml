@model QLTTTA_WEB.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trung tâm Tiếng Anh LDA</title>

    <link rel="stylesheet" href="~/css/retro-vintage.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body { display:flex; align-items:center; justify-content:center; min-height:100vh; padding:20px; }
        .container { max-width: 520px; width: 100%; }
        .header { text-align:center; margin-bottom:2rem; }
        .header h1 { font-size: 2.5rem; color: var(--vintage-brown); text-shadow: var(--text-shadow-vintage); margin-bottom: .5rem; }
        .subtitle { font-family:'Times New Roman','Georgia',serif!important; font-size:1.1rem; color:var(--vintage-rust); font-style:italic; }
        .text-validation-error { color: var(--vintage-burgundy); font-size:.85rem; margin-top:5px; font-style:italic; }
        .back-link { margin-top: 1.25rem; text-align:center; }
        .back-link a { color: var(--vintage-rust); text-decoration:none; font-weight:600; }
        .back-link a:hover { color: var(--vintage-brown); text-decoration:underline; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <i class="fas fa-unlock-alt" style="font-size: 3rem; color: var(--vintage-rust);"></i>
            <h1>ĐẶT LẠI MẬT KHẨU</h1>
            <p class="subtitle">~ Trung tâm Tiếng Anh LDA ~</p>
        </div>

        <div class="retro-form corner-decorated">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="retro-alert retro-alert-danger"><div class="retro-alert-content">@Html.ValidationSummary(false)</div></div>
            }
            @if (!string.IsNullOrEmpty(Model.InfoMessage))
            {
                <div class="retro-alert retro-alert-info"><div class="retro-alert-content">@Model.InfoMessage</div></div>
            }

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group-retro">
                    <label asp-for="Username" class="form-label-retro"><i class="fas fa-user"></i> Tên tài khoản</label>
                    <input asp-for="Username" class="form-control-retro" placeholder="Tên tài khoản" autocomplete="username" />
                    <span asp-validation-for="Username" class="text-validation-error"></span>
                </div>

                <div class="form-group-retro">
                    <label asp-for="Otp" class="form-label-retro"><i class="fas fa-shield-alt"></i> Mã OTP</label>
                    <input asp-for="Otp" class="form-control-retro" placeholder="Mã OTP" autocomplete="one-time-code" />
                    <span asp-validation-for="Otp" class="text-validation-error"></span>
                </div>

                <div class="form-group-retro">
                    <label asp-for="NewPassword" class="form-label-retro"><i class="fas fa-lock"></i> Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" class="form-control-retro" placeholder="Mật khẩu mới" autocomplete="new-password" />
                    <span asp-validation-for="NewPassword" class="text-validation-error"></span>
                </div>

                <div class="form-group-retro">
                    <label asp-for="ConfirmNewPassword" class="form-label-retro"><i class="fas fa-lock"></i> Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmNewPassword" type="password" class="form-control-retro" placeholder="Xác nhận mật khẩu mới" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-validation-error"></span>
                </div>

                <button type="submit" class="btn-retro btn-retro-primary" style="width:100%; margin-top: 1rem;">
                    <i class="fas fa-sync-alt"></i> ĐẶT LẠI MẬT KHẨU
                </button>
            </form>

            <div class="back-link">
                <a asp-action="Login"><i class="fas fa-arrow-left"></i> Quay lại đăng nhập</a>
            </div>
        </div>

        <div class="login-footer" style="text-align:center; margin-top: 2rem; padding: 1rem; font-size: .9rem; color: var(--vintage-gray);">
            <div class="vintage-divider"></div>
            <p>&copy; 2025 Trung tâm Tiếng Anh LDA. Bảo lưu mọi quyền.</p>
        </div>
    </div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
</body>
</html>