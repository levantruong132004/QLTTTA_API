@model StudentEditViewModel
@{
    ViewData["Title"] = "Chỉnh sửa học viên";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Inter', sans-serif;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 800px;
        backdrop-filter: blur(10px);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #5a67d8, #667eea);
        color: white;
        padding: 30px;
        text-align: center;
        position: relative;
    }

    .form-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 20"><defs><radialGradient id="a" cx="50%" cy="0%" r="100%"><stop offset="0%" stop-color="rgba(255,255,255,.1)"/><stop offset="100%" stop-color="rgba(255,255,255,0)"/></radialGradient></defs><rect width="100%" height="100%" fill="url(%23a)"/></svg>');
    }

    .form-header h1 {
        margin: 0;
        font-size: 1.8rem;
        font-weight: 600;
        position: relative;
        z-index: 1;
    }

    .form-content {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        color: #4a5568;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f8fafc;
        width: 100%;
    }

    .form-control:focus {
        border-color: #5a67d8;
        background-color: white;
        box-shadow: 0 0 0 3px rgba(90, 103, 216, 0.1);
        outline: none;
    }

    .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f8fafc;
        width: 100%;
    }

    .form-select:focus {
        border-color: #5a67d8;
        background-color: white;
        box-shadow: 0 0 0 3px rgba(90, 103, 216, 0.1);
        outline: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #5a67d8, #667eea);
        border: none;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        padding: 14px 30px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(90, 103, 216, 0.3);
        background: linear-gradient(135deg, #4c51bf, #5a67d8);
        color: white;
    }

    .btn-secondary {
        background: #718096;
        border: none;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        padding: 14px 30px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary:hover {
        background: #4a5568;
        transform: translateY(-1px);
        color: white;
        text-decoration: none;
    }

    .text-validation-error {
        color: #e53e3e;
        font-size: 0.8rem;
        margin-top: 5px;
        display: block;
    }

    .alert {
        border: none;
        border-radius: 12px;
        padding: 15px 20px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .alert-danger {
        background-color: #fed7d7;
        color: #c53030;
    }

    .button-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .row {
        margin-left: -10px;
        margin-right: -10px;
    }

    .col-md-6 {
        padding-left: 10px;
        padding-right: 10px;
    }

    @@media (max-width: 768px) {
        .form-container {
            margin: 10px;
            border-radius: 15px;
        }
        
        .form-content {
            padding: 30px 20px;
        }
        
        .button-group {
            flex-direction: column;
        }
        
        .btn-primary, .btn-secondary {
            justify-content: center;
        }

        .col-md-6 {
            margin-bottom: 0;
        }
    }
</style>

<div class="form-container">
    <div class="form-header">
        <h1><i class="fas fa-user-edit me-2"></i>Chỉnh sửa học viên</h1>
    </div>

    <div class="form-content">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Vui lòng kiểm tra lại thông tin đã nhập
                <ul class="mb-0 mt-2">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="StudentId" type="hidden" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FullName" class="form-label">
                            <i class="fas fa-user me-1"></i>@Html.DisplayNameFor(model => model.FullName)
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên học viên" />
                        <span asp-validation-for="FullName" class="text-validation-error"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StudentCode" class="form-label">
                            <i class="fas fa-id-card me-1"></i>@Html.DisplayNameFor(model => model.StudentCode)
                        </label>
                        <input asp-for="StudentCode" class="form-control" placeholder="Nhập mã học viên" />
                        <span asp-validation-for="StudentCode" class="text-validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Sex" class="form-label">
                            <i class="fas fa-venus-mars me-1"></i>@Html.DisplayNameFor(model => model.Sex)
                        </label>
                        <select asp-for="Sex" class="form-select">
                            <option value="">-- Chọn giới tính --</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                        <span asp-validation-for="Sex" class="text-validation-error"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="form-label">
                            <i class="fas fa-calendar me-1"></i>@Html.DisplayNameFor(model => model.DateOfBirth)
                        </label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="fas fa-phone me-1"></i>@Html.DisplayNameFor(model => model.PhoneNumber)
                        </label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="PhoneNumber" class="text-validation-error"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>@Html.DisplayNameFor(model => model.Address)
                        </label>
                        <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="Address" class="text-validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i>
                    Cập nhật thông tin
                </button>
                <a asp-action="Index" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}