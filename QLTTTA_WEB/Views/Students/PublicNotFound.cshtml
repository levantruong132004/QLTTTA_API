@{
    ViewData["Title"] = "Không tìm thấy";
}

<style>
    .nf-card { max-width: 480px; margin: 60px auto; background: var(--vintage-cream); border: 3px solid var(--vintage-brown); box-shadow: 8px 8px 0 var(--vintage-dark-brown); padding: 24px; text-align:center; }
    .nf-title { font-family:'Times New Roman', serif; text-transform:uppercase; color:var(--vintage-brown); margin-bottom:12px; }
    .btn-back { display:inline-block; margin-top:16px; text-decoration:none; border:3px solid var(--vintage-brown); padding:10px 16px; color:var(--vintage-cream); background:var(--vintage-brown); box-shadow:4px 4px 0 var(--vintage-dark-brown); }
    .btn-back:hover { transform: translate(2px,2px); box-shadow:2px 2px 0 var(--vintage-dark-brown); }
</style>

<div class="nf-card">
    <h2 class="nf-title">Không tìm thấy hồ sơ</h2>
    <p>Vui lòng kiểm tra lại mã QR hoặc liên hệ trung tâm.</p>
    <a class="btn-back" href="/">Về trang chủ</a>
</div>
