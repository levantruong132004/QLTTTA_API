@model List<QLTTTA_WEB.Models.PublicCourseItem>
@{
    ViewData["Title"] = "Danh sách khóa học";
}
<div class="retro-card">
    <div class="retro-card-header">
        <h2 class="retro-title"><i class="fas fa-book"></i> Danh sách khóa học</h2>
    </div>
    <div class="retro-card-body">
        <p class="text-muted">Chọn khóa học để gửi yêu cầu đăng ký. Nhân viên sẽ duyệt và sắp lớp.</p>
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Mã khóa học</th>
                    <th>Tên khóa học</th>
                    <th>Mô tả</th>
                    <th>Học phí</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.CourseCode</td>
                        <td>@c.CourseName</td>
                        <td>@c.Description</td>
                        <td><span class="badge bg-secondary">@c.StandardFee</span></td>
                        <td>
                            <form method="post" asp-action="RegisterCourse" asp-controller="Student">
                                <input type="hidden" name="courseCode" value="@c.CourseCode" />
                                <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-plus-circle"></i> Đăng
                                    ký</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>